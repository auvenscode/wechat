.top {
  height: 100rpx;
  background: #008842;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
}

.main {
  height: calc(100% - 100rpx);
  background: gray;
  display: flex;
}

.left {
  height: 100%;
  width: 200rpx;
}

.left-nav {
  width: 100%;
  height: 100%;
}

.scroll-view-item {
  background: #fd6440;
  height: 100rpx;
  margin: 10rpx 0;
  color: #fff;
}

.scroll-view-item.active {
  background: blue;
}

.right {
  height: 100%;
  flex-grow: 1;
}

.right-list {
  width: 100%;
  height: 100%;
}

.right-list .scroll-view-item {
  background: green;
  height: 300rpx;
  margin: 20rpx 0;
  color: #fff;
}